<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sbhacksiii.bet.alerts.LoginActivity"
    android:orientation="vertical" android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginEnd="10dp" android:layout_marginStart="10dp">

    <TextView
        android:text="User Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/signUpTextView" android:textSize="24sp"
        android:fontFamily="sans-serif" android:textStyle="normal|bold"
        android:gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailEditText" android:hint="Enter your email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText" android:hint="Enter your password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPasswordEditText" android:hint="Re-enter your password"/>
    <Button
        android:text="Register User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/registerButton"/>

    <TextView
        android:textAlignment="center"
        android:text="Already Registered? Sign in here"
        android:id="@+id/signInTextView"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:clickable="true"/>
    <TextView
        android:text="Checking out the map as a guest? Click here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/guestTextView"/>
    <ProgressBar
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar" android:layout_marginTop="50dp"
        android:visibility="invisible"/>
    <TextView
        android:textAlignment="center"
        android:text="Registering User..."
        android:id="@+id/registeringTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:visibility="invisible"/>
</LinearLayout>
